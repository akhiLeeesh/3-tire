pipeline {
    agent any

    stages {
        stage('Build Frontend') {
            agent {
                docker { image 'node:18' }
            }
            steps {
                dir('frontend') {
                    echo 'Installing frontend dependencies...'
                    sh 'npm install'
                    echo 'Building frontend...'
                    sh 'npm run build'
                }
            }
        }

        stage('Build Backend') {
            agent {
                docker { image 'maven:3.8.8-openjdk-17' }
            }
            steps {
                dir('backend') {
                    echo 'Building backend with Maven...'
                    sh 'mvn clean install'
                }
            }
        }
    }
}
